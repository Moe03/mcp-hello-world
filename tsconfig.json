{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "preserveSymlinks": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ESNext"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist/**/*.js", "./node_modules/**"]
}
